<%- include("partials/header"); -%>
<h1>Compose</h1>
<form action="/compose" method="post">
    <div class="form-group">
        <label for="composeTitle">Title</label>
        <input type="text" name="composeTitle" class="form-control" id="composeTitle">
    </div>
    <div class="form-group">
        <label for="composePost">Post</label>
        <textarea class="form-control" name="composePost" id="composePost" rows="5" cols="30"></textarea>
    </div>
    <button class="btn btn-primary" type="submit">Publish</button>
</form>
<%- include("partials/footer"); -%>